@model BugTracker.Models.ProjectViewModel

@{
    ViewBag.Title = "Assigning User to Project";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Assign User</h2>

            @using (Html.BeginForm("AssignUserToProj", "Projects", FormMethod.Post))
            {
                @Html.AntiForgeryToken()


                <div class="row">
                    <div class="col-xs-10">
                        <div class="form-horizontal">
                            <h4>Project</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Project.Id)
                            @Html.HiddenFor(model => model.Project.name)
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.Project.name)
                                    </div>
                                </div>
                            </div>


                            <div class="col-sm-5">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Project.Users, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @*@Html.EditorFor(model => model.Project.Users, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Project.Users, "", new { @class = "text-danger" })*@

                                    @Html.ListBox("SelectedUsers", Model.Users, new { Multiple = "multiple", Size = 15, style = "width: 100%;" })
                                </div>
                            </div>
                        </div>

                        @*<div class="col-xs-2">
                            <button type="button" id="multiselect_rightAll" class="btn btn-block"><i class="glyphicon glyphicon-forward"></i></button>
                            <button type="button" id="multiselect_rightSelected" class="btn btn-block"><i class="glyphicon glyphicon-chevron-right"></i></button>
                            <button type="button" id="multiselect_leftSelected" class="btn btn-block"><i class="glyphicon glyphicon-chevron-left"></i></button>
                            <button type="button" id="multiselect_leftAll" class="btn btn-block"><i class="glyphicon glyphicon-backward"></i></button>
                        </div>*@

                        @*<div class="col-xs-5">
                            <select name="to[]" id="multiselect_to" class="form-control" size="8" multiple="multiple"></select>
                        </div>*@
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>